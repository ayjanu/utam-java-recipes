{
  "methods": [
    {
      "name": "expand",
      "compose": [
        {
          "element": "triggerInput",
          "apply": "click"
        },
        {
          "element": "itemsWrapper",
          "apply": "waitForVisible"
        }
      ]
    },
    {
      "name": "expandForDisabledInput",
      "compose": [
        {
          "element": "button",
          "apply": "click"
        },
        {
          "element": "itemsWrapper",
          "apply": "waitForVisible"
        }
      ]
    }
  ],
  "exposeRootElement": true,
  "type": "editable",
  "shadow": {
    "elements": [
      {
        // this button is only there if input is disabled
        "name" : "button",
        "selector": {
          "css": "button"
        },
        "type": "clickable"
      },
      {
        "name": "triggerInput",
        "selector": {
          "css": "input"
        },
        "type": "clickable"
      },
      {
        "name": "groups",
        "selector": {
          "css": "ul[role='group']",
          "returnAll": true
        },
        "public": true
      },
      {
        "name": "itemsWrapper",
        "selector": {
          "css": "div.slds-dropdown_fluid"
        }
      },
      {
        "name": "items",
        "selector": {
          "css": "lightning-base-combobox-item",
          "returnAll": true
        },
        "type": "utam-lightning/pageObjects/baseComboboxItem",
        "public": true
      },
      {
        "name": "selectedItemInput",
        "selector": {
          "css": "input[type='text']"
        },
        "type": "editable",
        "public": true
      }
    ]
  }
}
