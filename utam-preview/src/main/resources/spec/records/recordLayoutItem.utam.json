{
  "exposeRootElement": true,
  "methods": [
    {
      "name": "getLabelText",
      "compose": [
        {
          "element": "label",
          "apply": "getText"
        }
      ]
    },
    {
      "name": "hasLabelText",
      "compose": [
        {
          "element": "root",
          "apply": "containsElement",
          "args": [
            {
              "type": "locator",
              "value": {
                "css": ".test-id__field-label"
              }
            },
            {
              "value": true
            }
          ]
        }
      ]
    },
    {
      "name": "edit",
      "compose": [
        {
          "element": "inlineEditButton",
          "apply": "click"
        },
        {
          "apply": "waitFor",
          "args": [
            {
              "type": "function",
              "predicate": [
                {
                  "element": "root",
                  "apply": "containsElement",
                  "args": [
                    {
                      "type": "locator",
                      "value": {
                        "css": "slot[slot='inputField']"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "elements": [
    {
      "type": "container",
      "name": "inputField",
      "public": true,
      "selector": {
        "css": "[slot='inputField']"
      }
    }
  ],
  "shadow": {
    "elements": [
      {
        "name": "label",
        "selector": {
          "css": ".test-id__field-label"
        },
        "public": true
      },
      {
        "name": "inlineEditButton",
        "selector": {
          "css": "button.inline-edit-trigger"
        },
        "type": [
          "clickable"
        ],
        "public": true
      }
    ]
  }
}
